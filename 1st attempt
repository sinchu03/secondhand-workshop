<script>
let items=JSON.parse(localStorage.getItem("items"))||[];

function show(id){
 home.style.display=add.style.display=buy.style.display="none";
 document.getElementById(id).style.display="block";
 if(id==="buy")loadItems();
}

function addItem(){
 let item={
  name:name.value,
  category:category.value,
  condition:condition.value,
  price:price.value
 };
 items.push(item);
 localStorage.setItem("items",JSON.stringify(items));
 alert("Item Added & Sent for Inspection");
 name.value=price.value="";
}

function loadItems(){
 list.innerHTML="";
 items.forEach((i)=>{
  list.innerHTML+=`
  <div class="card">
   <h3>${i.name}</h3>
   <p>${i.category}</p>
   <p>Condition: ${i.condition}</p>
   <p>₹${i.price}</p>
   <p>✔ Workshop Certified</p>
   <button>Buy Now</button>
  </div>`;
 });
}
</script>

